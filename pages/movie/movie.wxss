.nav{
	padding:20rpx;
	background:	#FFFFF0;
	margin-bottom: 10rpx;
	overflow: hidden;
}
.nav .item-nav{
	float: left;
	width: 25%;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
	color:#666;
	text-align:center;
}
.item-nav.active{
	color:#FF8C00;
}

/*内容样式*/
.item-list{
	padding:10rpx 20rpx;
	border-bottom: 1rpx solid #d8d8d8;
	overflow: hidden;
}
.item-list .title{
	display: block;
	width: 100%;
	height: 60rpx;
	overflow: hidden;
	font-size: 30rpx;
	line-height: 60rpx;
	float:left;
}
.index .title_text{
	float: left;
	display: inline-block;
	font-size:12rpx;
}

.title_text{
	margin-left:10rpx;
	vertical-align: middle;
}
.index{
	display: inline-block;
	padding:6rpx 2rpx;
	width: 24rpx;
	height: 24rpx;
	background: #FFD700;
	border-radius: 5rpx;
	box-sizing: border-box;
	vertical-align: middle;
	font-size: 16rpx;
	line-height: 16rpx;
	text-align: center;
	color:#fff;
}
.index.first{
	background: #DC143C;
}
.index.second{
	background: #FF6347;
}
.index.third{
	background: #FFA500;
}
.count{
	float: right;
	display: inline-block;
}
.count image{
	width: 20rpx;
	height: 20rpx;
	margin-right: 5rpx;
}
.search{
	color:#FF8C00;
}

.content{
	display: inline-flex;
	width: 100%;
	height:300rpx;
	padding-top:20rpx;
}
.left{
	flex: 3;
	/*padding:20rpx;
	padding-left: 0;*/
	box-sizing: border-box;
	position: relative;
}
.right{
	flex:7;
	display: inline-block;
	flex-direction: column;
	color:#666;
	padding-left: 20rpx;
}
.left image{
	width:100%;
	height: 100%;
}
.left text{
	position: absolute;
	width: 100%;
	height: 50rpx;
	background: rgba(0,0,0,.5);
	text-align: center;
	left: 0;
	bottom: 0;
	color:#ddd;
	font-size: 28rpx;
	line-height: 50rpx;
}
.right .dt{
	font-size:30rpx;
	font-weight: 700;
}
.right .dd{
	display: inline-block;
	font-size:30rpx;
	font-weight: normal;
	white-space:nowrap; 
	width: 322rpx;
	vertical-align: middle;
	text-overflow: ellipsis;
	overflow: hidden;
}
.right .data{
	font-size:30rpx;
	color:#666;
}
.right view{
	font-weight: normal;
}

.right button{
	display: inline-block;
	width: 160rpx;
	height: 60rpx;
	color:#fff;
	font-size: 30rpx;
	line-height: 60rpx;
	margin-top:20rpx;
	background: #f15a24;
}
